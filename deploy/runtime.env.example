# Copy this file to /srv/opencane/runtime.env and fill real values.
# Do NOT commit runtime.env with production secrets.

# -----------------------------------------------------------------------------
# LLM provider
# -----------------------------------------------------------------------------
NANOBOT_PROVIDERS__OPENROUTER__API_KEY=replace-with-real-key

# Optional (if you use direct OpenAI/Groq/custom STT/TTS paths)
# NANOBOT_PROVIDERS__OPENAI__API_KEY=
# NANOBOT_PROVIDERS__GROQ__API_KEY=

# -----------------------------------------------------------------------------
# Hardware auth
# -----------------------------------------------------------------------------
NANOBOT_HARDWARE__AUTH__TOKEN=replace-with-random-long-token
NANOBOT_HARDWARE__AUTH__ALLOW_UNBOUND_DEVICES=false
NANOBOT_HARDWARE__AUTH__REQUIRE_ACTIVATED_DEVICES=true
NANOBOT_HARDWARE__AUTH__CONTROL_API_RATE_LIMIT_ENABLED=true
NANOBOT_HARDWARE__AUTH__CONTROL_API_REPLAY_PROTECTION_ENABLED=true

# -----------------------------------------------------------------------------
# Adapter + profile
# -----------------------------------------------------------------------------
NANOBOT_HARDWARE__ADAPTER=generic_mqtt
NANOBOT_HARDWARE__DEVICE_PROFILE=ec600mcnle_v1

# Supported examples:
# ec600mcnle_v1 | a7670c_v1 | sim7600g_h_v1 | ec800m_v1 | ml307r_dl_v1

# -----------------------------------------------------------------------------
# MQTT broker (for generic_mqtt / ec600)
# -----------------------------------------------------------------------------
NANOBOT_HARDWARE__MQTT__HOST=replace-with-broker-host
NANOBOT_HARDWARE__MQTT__PORT=1883
NANOBOT_HARDWARE__MQTT__USERNAME=replace-with-mqtt-username
NANOBOT_HARDWARE__MQTT__PASSWORD=replace-with-mqtt-password
NANOBOT_HARDWARE__MQTT__TLS_ENABLED=false

# -----------------------------------------------------------------------------
# Optional runtime tuning
# -----------------------------------------------------------------------------
NANOBOT_HARDWARE__STRICT_STARTUP=true
NANOBOT_HARDWARE__TELEMETRY__NORMALIZE_ENABLED=true
NANOBOT_HARDWARE__TELEMETRY__PERSIST_SAMPLES_ENABLED=true
NANOBOT_HARDWARE__TOOL_RESULT__ENABLED=true
